# Variables de entorno para el frontend Next.js
# Copia este archivo como .env.local y configura tus valores

# URL del backend API
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Configuración de NextAuth
NEXTAUTH_SECRET="tu-clave-secreta-muy-segura-aqui"
NEXTAUTH_URL="http://localhost:3000"

# Base de datos para NextAuth (misma que backend)
DATABASE_URL="postgresql://usuario:password@localhost:5432/asistente_ia_juvenil"

# Configuración de la aplicación
NEXT_PUBLIC_APP_NAME="Asistente IA Juvenil"
NEXT_PUBLIC_APP_DESCRIPTION="Generador de actividades para grupos juveniles"

# Configuración de analytics (opcional)
NEXT_PUBLIC_GOOGLE_ANALYTICS=""

# Configuración de uploads
NEXT_PUBLIC_MAX_FILE_SIZE="10485760"  # 10MB en bytes

# Configuración de la IA
NEXT_PUBLIC_DEFAULT_AI_MODEL="gpt-3.5-turbo"

# URLs de desarrollo y producción
NEXT_PUBLIC_VERCEL_URL=""
NEXT_PUBLIC_DOMAIN="localhost:3000"